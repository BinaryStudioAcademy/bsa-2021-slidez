{
    "name": "Slidez-Extension",
    "description": "Slidez Extension",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Start Slidez Extension"
    },
    "icons": {
        "16": "logo192.png",
        "48": "logo192.png",
        "128": "logo192.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-zDo+AU4rypqhbDVpVjJO76tlt4G7UyfaqIlm+lb3sw8='; object-src 'self'",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/vendor.js", "js/content_script.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
      "scripts": ["js/vendor.js", "js/background.js"]
    },
    "externally_connectable": {
        "matches": ["https://docs.google.com/*", "*://localhost/*"]
    },
    "permissions": [
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "background",
        "activeTab",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost",
        "http://bsa2021slidez-env.eba-b3mmt3yw.eu-west-1.elasticbeanstalk.com/"
      ]
}
